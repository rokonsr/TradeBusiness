@using System.Web.UI.WebControls
@using System.Web.UI.WebControls.WebParts
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Admin User Details";
    
}

<style>
    span.field-validation-error {
        color: red;
    }
</style>

<div style="width:90%; margin:0 auto" class="tablecontainer">
    <a class="popup btn btn-primary" href="/Admin/AdminUser/Save/0" style="margin-bottom:20px; margin-top:20px;">Add New Admin User</a>
    <table id="myDatatable">
        <thead>
            <tr>
                <th>Username</th>
                <th>User Role</th>
                <th>Email</th>
                <th>Maximum Company</th>
                <th>Maximum Branch</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>

<script>
        $(document).ready(function() {
            var oTable = $('#myDatatable').DataTable({
                "ajax": {
                    "url": '/AdminUser/GetAdminUser',
                    "type": "get",
                    "datatype": "json"
                },

                "columns": [
                    { "data": "AdminUsername", "autoWidth": true },
                    { "data": "UserRoleName", "autoWidth": true },
                    { "data": "EmailAddress", "autoWidth": true },
                    { "data": "MaxCompany", "autoWidth": true },
                    { "data": "MaxBranch", "autoWidth": true },
                    {
                        "data": "AdminUserId",
                        "width": "50px",
                        "render": function(data) {
                            return '<a class="popup" href="/Admin/AdminUser/Edit/' + data + '">Edit</a>';
                        }
                    },
                    {
                        "data": "AdminUserId",
                        "width": "50px",
                        "render": function(data) {
                            return '<a class="popup" href="/Admin/AdminUser/Delete/' + data + '">Delete</a>';
                        }
                    }
                ]
            });
            $('.tablecontainer').on('click', 'a.popup', function(e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));
            });

            function OpenPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function() {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form');

                });

                $dialog = $('<div class="popupWindow" style="overflow:auto; padding:10px 30px;"></div>')
                    .html($pageContent)
                    .dialog({
                        draggable: true,
                        autoOpen: false,
                        resizable: true,
                        model: true,

                        title: '@ViewBag.Title',
                        height: 580,
                        width: 600,
                        close: function () {
 
                            $dialog.dialog('destroy').remove();
                        }
                    });

                $('.popupWindow').on('submit', '#popupForm', function(e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function(data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    });

                    e.preventDefault();
                });

                $dialog.dialog('open');
            }
        })
</script>